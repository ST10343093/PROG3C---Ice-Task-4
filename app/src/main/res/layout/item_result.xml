<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvResultCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvResultScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score: 0/10"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvResultTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: 0 sec"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvResultDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 2025-05-15"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvResultPerformance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Performance: 0%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>